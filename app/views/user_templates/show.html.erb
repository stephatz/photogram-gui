<div>
    <ul>
        <li><a href="/users">Users</a></li>
        <li><a href="/photos">Photos</a></li>
    </ul>
</div>

<h1> <%= @the_user.username%> </h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    117
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%= @the_user.id%>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value=<%= @the_user.username%>>

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%=@user_photos.count%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>

  <% @user_photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.image %>" style="width:300px;">
    </td>

    <td>
      <%= photo.poster.username %>
    </td>

    <td>
      <%= photo.caption %>
    </td>

    <td>
      <%= photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
